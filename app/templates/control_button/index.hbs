<div class="col-md-3">
  <div class="panel panel-info">
      <div class="panel-heading">
          <h3 class="panel-title">{{name}}</h3>
      </div>
      <div class="panel-body">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#home" data-toggle="tab"><i class="fa fa-pencil"></i></a></li>
          <li><a href="#profile" data-toggle="tab"><i class="fa fa-arrows"></i></a></li>
          <li><a href="#messages" data-toggle="tab"><i class="fa fa-expand"></i></a></li>
          <li><a href="#settings" data-toggle="tab"><i class="fa fa-cogs"></i></a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane fade in active" id="home">
            {{input-text label="Name" value=name action='acceptChanges'}}
            {{input-text label="Title" value=title action='acceptChanges'}}
          </div>
          <div class="tab-pane fade" id="profile">
            <div class="form-group">
              <label>Align with parent</label>
              <div class="btn-group">
                <label {{bind-attr class=":btn :btn-default alignParentStart:active"}}>
                  {{input type="checkbox" checked=alignParentStart class="hidden"}} <i class="fa fa-chevron-left"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default alignParentTop:active"}}>
                  {{input type="checkbox" checked=alignParentTop class="hidden"}} <i class="fa fa-chevron-up"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default alignParentBottom:active"}}>
                  {{input type="checkbox" checked=alignParentBottom class="hidden"}} <i class="fa fa-chevron-down"></i>
                </label>
                <label {{bind-attr class=":btn :btn-default alignParentEnd:active"}}>
                  {{input type="checkbox" checked=alignParentEnd class="hidden"}} <i class="fa fa-chevron-right"></i>
                </label>
              </div>
            </div>
            {{input-select label="Align with top" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=alignTop prompt="Select sibling"}}
            {{input-select label="Align with start" content=siblings optionLabelPath="content.name" optionValuePath="content" selection=alignStart prompt="Select sibling"}}
            {{input-text label="Position X [px]" value=posX action='acceptChanges' type="number"}}
            {{input-text label="Position Y [px]" value=posY action='acceptChanges' type="number"}}
          </div>
          <div class="tab-pane fade" id="messages">
            {{input-text label="Width [px]" value=width action='acceptChanges' type="number"}}
            {{input-text label="Height [px]" value=height action='acceptChanges' type="number"}}
          </div>
          <div class="tab-pane fade" id="settings">...</div>
        </div>
        
      </div>
      <div class="panel-footer">
         <div class="btn-group">
            <button type="button" class="btn btn-default" {{action "deleteViewController"}}>
              <i class="fa fa-trash-o"></i> 
            </button>
          </div>
      </div>
  </div>
</div>