<div class="col-md-6">
	<div class="panel panel-primary">
	    <div class="panel-heading">
        <strong class="panel-title">{{name}}</strong>
        <div class="col-xs-4 input-group pull-right">
        	<span class="input-group-btn">
      			<button class="btn btn-default" {{action 'decreaseZoom'}}><i class="fa fa-search-minus"></i> </button>
      		</span>
      		{{input type="number" value=zoomLevel class="form-control" step="0.2" min="0.1"}}
      		<span class="input-group-btn">
      			<button class="btn btn-default" {{action 'increaseZoom'}}><i class="fa fa-search-plus"></i> </button>
      		</span>
    		</div>
      	<div class="clearfix"></div>
	    </div>
	    <div class="panel-body plotted">
	    	{{view App.DeviceView}}
	    </div>
	</div>
</div>

{{outlet}}
