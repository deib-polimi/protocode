<div class="col-md-3">
  <div class="panel panel-info">
      <div class="panel-heading">
          <h3 class="panel-title">
            {{#link-to 'viewController' class="btn btn-default btn-sm"}}
              <i class="fa fa-mail-reply"></i>
            {{/link-to}} 
            <i class="fa fa-bars"></i> Edit menu
          </h3>
      </div>
      <ul class="list-group" id="collapse-views" class="collapse in">
        {{#each item in menuItems}}
          <li class="list-group-item">
            {{#link-to "appMenuItem" item}}{{item.name}}{{/link-to}}
          </li>
        {{/each}}
        {{#if isCreating}}
          <li class="list-group-item">
            <div class="input-group">
              {{focus-input value=newNameMenuItem class="form-control" insert-newline="createMenuItem"}}
              <span class="input-group-btn">
                <button type="button" class="btn btn-default" {{action "createMenuItem"}}>
                  <i class="fa fa-save"></i> 
                </button>
                <button type="button" class="btn btn-default" {{action "setCreating" false}}>
                  <i class="fa fa-times"></i> 
                </button>
              </span>
            </div>
          </li>
        {{/if}}
      </ul>
      <div class="panel-footer">
         <div class="btn-group">
            <button type="button" class="btn btn-default" {{action "setCreating" true}}>
              <i class="fa fa-plus"></i> 
            </button>
          </div>
      </div>
  </div>
</div>